{
  "name": "create-codepen",
  "version": "1.0.1",
  "description": "Create CodePen with API",
  "keywords": [
    "codepen"
  ],
  "homepage": "https://github.com/Mister-Hope/create-codepen",
  "bugs": {
    "url": "https://github.com/Mister-Hope/create-codepen/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Mister-Hope/create-codepen.git",
    "directory": "packages/theme"
  },
  "license": "MIT",
  "author": {
    "name": "Mr.Hope",
    "email": "mister-hope@outlook.com",
    "url": "https://mister-hope.com"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs",
      "default": "./dist/index.mjs"
    }
  },
  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rollup -c rollup.config.ts --configPlugin esbuild",
    "changelog": " commit-and-tag-version --skip.bump --skip.commit --skip.tag",
    "clean": "rimraf dist",
    "commit": "pnpm git-cz",
    "dev": "vite dev",
    "lint": "pnpm lint:prettier --write && pnpm lint:eslint --fix",
    "lint:check": "pnpm lint:prettier && pnpm lint:eslint",
    "lint:eslint": "eslint . --ext .js,.ts,.vue",
    "lint:prettier": "prettier --check .",
    "prepare": "husky",
    "prepublishOnly": "pnpm build"
  },
  "nano-staged": {
    "**/*": "prettier --write --ignore-unknown",
    "*.{js,ts}": "eslint --fix"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-git"
    }
  },
  "devDependencies": {
    "@commitlint/cli": "19.0.3",
    "@commitlint/config-conventional": "19.0.3",
    "@typescript-eslint/eslint-plugin": "7.1.0",
    "@typescript-eslint/parser": "7.1.0",
    "commit-and-tag-version": "12.2.0",
    "commitizen": "4.3.0",
    "cz-git": "1.9.0",
    "esbuild": "0.20.1",
    "eslint": "8.57.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-import": "2.29.1",
    "eslint-plugin-prettier": "5.1.3",
    "husky": "9.0.11",
    "nano-staged": "0.8.0",
    "prettier": "3.2.5",
    "rimraf": "5.0.5",
    "rollup": "4.12.0",
    "rollup-plugin-dts": "6.1.0",
    "rollup-plugin-esbuild": "6.1.1",
    "typescript": "5.3.3",
    "vite": "5.1.4"
  },
  "packageManager": "pnpm@8.15.3",
  "engines": {
    "node": ">=18"
  }
}
